            <EditText
                android:id="@+id/editTextFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Name of Food"
                android:inputType="text"
                android:padding="12dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Food Description"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextFoodDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Description for Food"
                android:inputType="text"
                android:padding="12dp" />



            <TextView
                android:id="@+id/textViewExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Expiry Date"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="YYYY/MM/DD"
                android:inputType="date"
                android:padding="12dp" />

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quantity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Quantity of Food"
                android:inputType="text"
                android:padding="12dp" />





            <Button
                android:id="@+id/buttonSubmitInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:backgroundTint="#3F51B5"
                android:text="Add Inventory"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/buttonBackInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:backgroundTint="#3F51B5"
                android:text="Cancel"
                android:textStyle="bold"
                app:cornerRadius="5dp" />



        </LinearLayout>
    </ScrollView>

</FrameLayout>
