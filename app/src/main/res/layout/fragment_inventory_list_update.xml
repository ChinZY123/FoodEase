<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inventory.InventoryListUpdateFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewUpdateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inventoryupdate"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textViewInventoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/foodnameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Name of Food"
                android:inputType="text"
                android:padding="12dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Food Description"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Description for Food"
                android:inputType="text"
                android:padding="12dp" />

            <TextView
                android:id="@+id/textViewExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Expiry Date"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="YYYY/MM/DD"
                android:inputType="date"
                android:padding="12dp" />

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quantity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:hint="Quantity of Food"
                android:inputType="text"
                android:padding="12dp" />

            <Button
                android:id="@+id/buttonSaveUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:backgroundTint="#3F51B5"
                android:text="Update Inventory"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/buttonUpdateBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#3F51B5"
                android:backgroundTint="#3F51B5"
                android:text="Cancel"
                android:textStyle="bold"
                app:cornerRadius="5dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>